<div id="suggestions-list">
  <h3 id="suggestions__title">
    <%= translated_attribute section.title %>
    <a href="#" class="close" id="close-suggestions" title="<%= t "close", scope: "decidim.participatory_documents.document" %>">&times;</a>
  </h3>
  <% suggestions.each do |suggestion| %>
    <%= cell("decidim/participatory_documents/suggestion", suggestion) %>
  <% end %>
</div>

<div id="participation-modal-form">
  <%= render "decidim/participatory_documents/section_suggestions/form" %>
</div>
