<html dir="ltr" mozdisallowselectionprint>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
  <meta name="google" content="notranslate">
  <title>PDF.js viewer</title>

  <link rel="stylesheet" href="/pdfjs/web/viewer.css">

  <script src="/pdfjs/build/pdf.js"></script>

  <!-- This snippet is used in production (included from viewer.html) -->
  <link rel="resource" type="application/l10n" href="/pdfjs/web/locale/locale.properties">
  <script src="/pdfjs/web/viewer.js"></script>
  <%= javascript_pack_tag "decidim_participatory_documents_viewer" %>
  <%= stylesheet_pack_tag "decidim_participatory_documents_viewer" %>
  <%= csrf_meta_tags %>

</head>

<body tabindex="1">
  <%= render "decidim/participatory_documents/documents/pdfjs_base" %>

  <div id="notifications"></div>

  <div id="participation-modal">Comments here</div>

<script>

  var zonesPath = '<%= document_zones_path(document) %>';
  function blurBoxContainer(box, e) {
    e.preventDefault();
  }

  class SuggestionForm {
      constructor(path, group) {
          this.path = path;
          this.group = group;
      }

      getCSRFToken() {
          return document.getElementsByName("csrf-token")[0].content;
      }

      getGroupUrl(){
          return this.path + "/" + this.group;
      }
      addFormHandler(){

          let handler = this;
          let form = document.getElementById( 'new_suggestion_' );
          if ( form){

              form.addEventListener("submit", function(event){
                  event.preventDefault();
                  fetch(event.target.action, {
                      method: event.target.method,
                      body: new URLSearchParams(new FormData(event.target)),
                      headers: {
                          'Content-Type': 'application/x-www-form-urlencoded',
                          'Accept': 'text/html',
                          "X-CSRF-Token": handler.getCSRFToken()
                      },
                      credentials: "include"
                  }).then((response) => {
                      if (response.ok === false && response.status === 400) { // validation
                          let div = document.getElementById("participation-modal-form");
                          div.innerHTML = response.text();
                          return Promise.reject();
                      }
                      return response.text();
                  }).then((data)=>{
                      let div = document.getElementById("participation-modal");
                      div.innerHTML = data;
                      handler.addFormHandler();
                  }).catch((error) => {

                      console.log(error);
                  });
              }, {once: true});
          }
      }

      populateArea(data) {
          let div = document.getElementById("participation-modal");
          div.innerHTML = data;
          div.classList.add("active");
          this.addFormHandler();
      }

      fetchGroup(){
          let handler = this;

          fetch(handler.getGroupUrl(), {
              headers: {
                  'Content-Type': 'text/html; charset=utf-8',
                  'Accept': 'text/html',
              },
              credentials: "include",
              // body: JSON.stringify(data)
          } ).then((response) => {
              if (response.ok) {
                  return response.text();
              }
              throw new Error(" ");
          })
              .then((data) => {
                  handler.populateArea(data);
              })
              .catch((error) => {
                  console.log(error);
              });
      }
  }

  var I18n = { };
  var currentBoxes = <%= annotations.collect(&:serialize).to_json.html_safe %>;
  var pages = {};
  PDFViewerApplication.initializedPromise.then(function() {
    showInfo("Click on a marked area to participate!", {delay: 5000});

    PDFViewerApplication.eventBus.on('annotationeditorlayerrendered', function (doc) {
      if(!pages[doc.pageNumber]) {
        var page = PDFViewerApplication.pdfViewer._pages[doc.pageNumber - 1];
        pages[doc.pageNumber] = page;
        var annotationsLayer = page.annotationEditorLayer && page.annotationEditorLayer.div;
        if(annotationsLayer) {
            var viewer = InitPolygonViewer(I18n, annotationsLayer, currentBoxes.filter(box => box.page_number === doc.pageNumber));
            viewer.onBoxClick = function(box, e){
                (new SuggestionForm(zonesPath, box.group)).fetchGroup();
            }
            viewer.onBoxBlur = blurBoxContainer
            page.boxEditor = viewer;
        }
      }
    });
  });
</script>
</body>
</html>
