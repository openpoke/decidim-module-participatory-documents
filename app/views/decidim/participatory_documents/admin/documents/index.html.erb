<div class="card full-height">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".title") %>
    </h2>
  </div>
  <div class="card-section">
    <object data="<%= pdf_viewer_documents_path %>?file=<%= document.attached_uploader(:file).path %>" type="application/pdf" width="100%" height="100%">
      <iframe src="<%= pdf_viewer_documents_path %>?file=<%= document.attached_uploader(:file).path %>" width="100%" height="100%">
        <p>This browser does not support PDF!</p>
      </iframe>
    </object>
  </div>
</div>
