<%= javascript_pack_tag "decidim_participatory_documents_admin" %>

<div class="card full-height">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".title") %>
    </h2>
  </div>

  <object
    data="<%= pdf_viewer_documents_path %>?file=<%=document.attached_uploader(:file).path %>"
    type="application/pdf"
    width="100%"
    height="100%"
  >

    <iframe
      src="<%= pdf_viewer_documents_path %>?file=<%=document.attached_uploader(:file).path %>"
      width="100%"
      height="100%"
    >
      <p>This browser does not support PDF!</p>
    </iframe>
  </object>
</div>

<style>
  .layout-content > .container { height: 100%; }
  .container .full-height { height: 100%; }
</style>