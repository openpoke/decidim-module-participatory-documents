<% if valuator_assigned_to_suggestion? %>
  <div id="js-assign-suggestion-to-valuator-actions" class="form-single-suggestion"
       style="max-width:400px">
    <%= form_tag(document_valuation_assignment_path(document), method: :post, id: "js-form-assign-suggestion-to-valuator",
                 class: "flex--lc flex-gap--1") do %>
      <div class="checkboxes hide">
        <%= check_box_tag "suggestion_ids[]", suggestion.id, true,
                          class: "js-check-all-suggestion js-suggestion-id-#{suggestion.id}" %>
      </div>

      <%= bulk_valuators_select(current_participatory_space, t("decidim.participatory_documents.admin.suggestions.index.actions.assign_to_valuator")) %>
      <%= submit_tag(t("decidim.participatory_documents.admin.suggestions.index.actions.assign_to_valuator_button"),
                     id: "js-submit-assign-suggestion-to-valuator",
                     class: "button small button--simple float-left") %>
    <% end %>
  </div>
<% end %>
