<div id="js-bulk-actions-wrapper">
  <button
    id="js-bulk-actions-button"
    class="button button--nomargin small success light dropdown hide"
    type="button"
    data-toggle="js-bulk-actions-dropdown">
    <%= t("decidim.participatory_documents.admin.suggestions.index.actions.title") %>
  </button>

  <div
    id="js-bulk-actions-dropdown"
    class="dropdown-pane"
    data-position="bottom"
    data-alignment="right"
    data-dropdown="dropdown"
    data-auto-focus="false"
    data-events="resize">
    <ul class="list-reset">
      <li>
        <button type="button" data-action="assign-suggestions-to-valuator">
          <%= t("decidim.participatory_documents.admin.suggestions.index.actions.assign_to_valuator") %>
        </button>
      </li>
      <li>
        <button type="button" data-action="unassign-suggestions-from-valuator">
          <%= t("decidim.participatory_documents.admin.suggestions.index.actions.unassign_from_valuator") %>
        </button>
      </li>
      <li>
        <button type="button" data-action="publish-answers">
          <%= t("decidim.participatory_documents.admin.suggestions.index.actions.publish_answers") %>
        </button>
      </li>
    </ul>
  </div>
</div>
