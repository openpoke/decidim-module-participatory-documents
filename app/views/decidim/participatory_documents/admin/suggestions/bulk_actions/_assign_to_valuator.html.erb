<div id="js-assign-suggestions-to-valuator-actions" class="hide js-bulk-action-form">
  <%= form_tag(document_valuation_assignment_path(document), method: :post, id: "js-form-assign-suggestions-to-valuator", class: "") do %>
    <div class="checkboxes hide">
      <% suggestions.each do |suggestion| %>
        <%= check_box_tag "suggestion_ids[]", suggestion.id, false, class: "js-check-all-suggestion js-suggestion-id-#{suggestion.id}" %>
      <% end %>
    </div>

    <%= bulk_valuators_select(current_participatory_space, t("decidim.participatory_documents.admin.suggestions.index.actions.assign_to_valuator")) %>

    <%= submit_tag(t("decidim.participatory_documents.admin.suggestions.index.actions.assign_to_valuator_button"), id: "js-submit-assign-suggestion-to-valuator", class: "button small button--simple float-left") %>

    <button id="js-cancel-assign-suggestion-to-valuator" class="button tiny clear compact js-cancel-bulk-action" type="button"><%= t("decidim.participatory_documents.admin.suggestions.index.actions.cancel") %></button>
  <% end %>
</div>
