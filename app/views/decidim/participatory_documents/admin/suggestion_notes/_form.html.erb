<%= decidim_form_for(notes_form, url: document_suggestion_suggestion_notes_path(document, suggestion, notes_form),
                     html: { class: "form-defaults form new_suggestion_note" }) do |f| %>
  <div class="form__wrapper">
    <%= f.text_area :body, rows: 10, label: t(".note") %>
  </div>
  <div class="button button__sm button__secondary">
    <%= f.submit t(".submit") %>
  </div>
<% end %>
